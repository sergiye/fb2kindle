@using jail.Models
@model UserProfile

<div id="editorContainer">
    @using (Html.BeginForm("UserEdit", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="form-horizontal panel-body">
            @Html.HiddenFor(m => m.Id)
            <div class="valid-summary bg-danger text-center">
                @Html.ValidationSummary(true, "Operation was unsuccessful. Please correct the errors and try again")
            </div>
            <div class="form-group row col-lg-12">
                @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger" })
            </div>
            <div class="form-group row col-lg-12">
                @Html.LabelFor(m => m.UserType, new {@class = "control-label"})
                @{
                    var list = new List<SelectListItem>
                               {
                                   new SelectListItem {Text = UserType.Administrator.ToString(), Value = UserType.Administrator.ToString()},
                                   new SelectListItem {Text = UserType.User.ToString(), Value = UserType.User.ToString()}
                               };
                }
                @Html.DropDownListFor(m => m.UserType, list, "Choose an option", new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.UserType, null, new {@class = "text-danger"})
            </div>
            <div class="col-lg-12">
                @Html.LabelFor(m => m.Active, new { @class = "col-md-5 control-label" })
                @Html.CheckBoxFor(m => m.Active, new { @class = "checkbox", placeholder = "Active" })
            </div>
        </div>
    }
</div>