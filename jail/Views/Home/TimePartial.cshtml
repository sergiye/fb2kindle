@using jail.Models
@model IEnumerable<CheckItem>
    
<table  class="table table-striped table-bordered table-condensed table-hover" id="timeGrid">
    <thead>
        <tr>
            <th data-defaultsort="asc" style="min-width: 40px; width: 40px;">Day</th>
            <th data-defaultsort="asc" style="min-width: 50px; width: 50px;">@Html.DisplayNameFor(model => model.Date)</th>
            <th style="min-width: 65px; width: 65px;">@Html.DisplayNameFor(model => model.CheckInTime)</th>
            <th style="min-width: 65px; width: 65px;">@Html.DisplayNameFor(model => model.CheckOutTime)</th>
            <th style="min-width: 65px; width: 60px;">@Html.DisplayNameFor(model => model.Duration)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ValueFor(modelItem => item.Date, "{0:ddd}")
                </td>
                <td>
                    @Html.ValueFor(modelItem => item.Date, "{0:dd MMM}")
                </td>
                <td>
                    @Html.ValueFor(modelItem => item.CheckInTime, "{0:hh\\:mm\\:ss}")
                </td>
                <td>
                    @Html.ValueFor(modelItem => item.CheckOutTime, "{0:hh\\:mm\\:ss}")
                </td>
                <td class="@(item.Duration.Hours < 8 ? "warning" : item.Duration.Hours >= 9 ? "danger" : "success")">
                    @Html.HiddenFor(modelItem => item.UserId)
                    @Html.ValueFor(modelItem => item.Duration, "{0:hh\\:mm\\:ss}")
                    @* @Html.TextBoxFor(modelItem => item.Duration, "{0:hh\\:mm}") *@
                </td>
            </tr>
        }
    </tbody>
</table>
